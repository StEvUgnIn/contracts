{
  "name": "@c-layer/token",
  "version": "1.3.2",
  "description": "Token smart contracts for the Compliance Layer",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "develop": "hardhat console --network hardhat",
    "console": "hardhat console",
    "coverage": "hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "test": "hardhat test",
    "flatten": "hardhat flatten",
    "gas-report": "env ENABLE_GAS_REPORT=1 hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/c-layer/contracts.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "contracts",
    "securities",
    "erc20",
    "token"
  ],
  "author": "Cyril Lapinte",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/c-layer/contracts/issues"
  },
  "homepage": "https://c-layer.org",
  "depenencies": {
    "@c-layer/common": "^1.3.2",
    "@c-layer/oracle": "^1.3.2"
  },
  "devDependencies": {
    "@metamask/eth-sig-util": "^4.0.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereumjs-util": "^7.1.4",
    "ethereumjs-wallet": "^1.0.2",
    "hardhat": "^2.9.3",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-tracer": "1.1.0-rc.3",
    "mocha": "^9.2.2",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.5.16",
    "web3": "^1.7.3"
  }
}
